{% extends "master.html.twig" %}
{% block title %}Edit Customer{% endblock %}
{% block headExtra %}
    <link rel="stylesheet" type="text/css" href="/styles/addEmployee.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="/scripts/addEmployee.js"></script>
{% endblock %}
{% block content %}       
    <form method="post" id="form" name="form" onsubmit="return validateForm();" enctype="multipart/form-data">
        {% if error %}
            {% for e in error %}
                <h5 style="color:red;margin-bottom: 0;">{{e}}</h5>
            {% endfor %}
        {% endif %}
        <table>
            <caption>
                <h1>Please Edit this form then Click on Edit Button.</h1>
            </caption>
            <tr>
                <td class="labels">
                    <label for="firstname">First Name:</label>
                </td>
                <td>
                    <input type="text" id="firstname" name="firstname" value="{{v.firstname}}" required/>
                </td>
                <td class="labels">
                    <label for="country">Country:</label>
                </td>
                <td>
                    <input type="text" id="country" name="country" value="Canada" required/>
                </td>
            </tr>
            <tr>
                <td class="labels">
                    <label for="lastname">Last Name:</label>
                </td>
                <td>
                    <input type="text" id="lastname" name="lastname" value="{{v.lastname}}" required />
                </td>
                <td class="labels">
                    <label for="email">Email:</label>
                </td>
                <td>
                    <input type="email" id="email" name="email" placeholder="name@example.com" value="{{v.email}}" required/>
                </td>
            </tr>
            <tr>
                <td class="labels">
                    <label for="birthdate">Birth Date:</label>
                </td>
                <td>
                    <input type="text" id="birthdate" name="birthdate" value="{{v.birthdate}}" required/>
                </td>
                <td class="labels">
                    <label for="phone">Phone:</label>
                </td>
                <td>
                    <input type="tel" id="phone" name="phone" placeholder="999-999-9999" value="{{v.phone}}" required/>
                </td>
            </tr>          
            <tr>
                <td class="labels">
                    <label for="address">Address:</label>
                </td>
                <td colspan="3">
                    <input type="text" id="address" name="address" size="60" value="{{v.address}}" required/>
                </td>
            </tr>
            <tr>
                <td class="labels">
                    <label for="appNo">App No.:</label>
                </td>
                <td>
                    <input type="text" id="appNo" name="appNo" pattern="[0-9]{1,}" placeholder="Number Only" value="{{v.appNo}}"  required/>
                </td>
                 <td>
                </td>
                <td rowspan="3">
                    <input type="submit" value="Edit Customer" id="submit" />
                </td> 
            </tr>
            <tr>
                <td class="labels">
                    <label for="postalcode">PostalCode:</label>
                </td>
                <td>
                    <input type="text" id="postalcode" name="postalcode" value="{{v.postalcode}}" required/>
                </td>
                <td>
                </td>                         
            </tr>
            <tr>
                <td colspan="2">
                    <input type="reset" value="Clear The Form" style="width:260px;height:25px;" disabled/>
                </td>
                <td>
                </td>           
            </tr>
        </table>
    </form>
{% endblock %}

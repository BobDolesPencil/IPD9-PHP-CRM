{% extends "master.html.twig" %}
{% block title %}Place Order{% endblock %}
{% block headExtra %}
    <link href="/styles/listproduct.css" type="text/css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript" src="/scripts/cartlistitem.js"></script>
{% endblock %}
{% block content %}
    <article class="tabs">
        <input checked id="one" name="tabs" type="radio">
        <label for="one">Cart Items</label>
        <div class="panels">
            <div class="panel">
                <form method="POST">
                    <p>Total value before tax is {{ totalBeforeTax }}.</p>
                    <p>Shipping before tax is {{ shippingBeforeTax }}.</p>
                    <p>Taxes (GST/QST/HST) {{ taxes }}. </p>
                    <p>Final total with shipping and taxes (amount to be paid):
                        <b>{{ totalWithShippingAndTaxes }}</b>.</p>
                    Enter Customer ID here:<input type="text" size="40" name="customerid" style="opacity: 1;"/>
                    <input type="submit" value="Confirm" style="opacity: 1;"/>
                    <input type="button" value="Cancel" style="opacity: 1;" onclick="location.href='/viewcart'"/>
                </form>
            </div>
        </div>
    </article>
{% endblock %}


